<%= simple_form_for(@recipe, html: { class: 'form-vertical' }) do |f| %>
  <%= f.input :name,
              label: "Recipe Name",
              error: 'Message is mandatory, please specify one',
              autofocus: true %>
  <%= f.input :ingredient,
              as: :text,
              label: 'Message',
              error: 'Message is mandatory, please specify one',
              placeholder: 'I am proud of myself because ...',
              input_html: {rows:  10, class: "materialize-textarea"} %>
  <%= f.submit "Save Recipe", "data-disable-with"=> "Just a moment...", class: "btn waves-effect waves-light" %>
<% end %>