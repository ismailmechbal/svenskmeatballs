<%= simple_form_for(@recipe, html: { class: 'form-vertical' }) do |f| %>
  <%= f.input :name,
              label: "Recipe Name",
              error: 'Message is mandatory, please specify one',
              autofocus: true %>
  <%= f.input :description,
              as: :text,
              label: 'Description',
              error: 'Description is mandatory, please write one',
              placeholder: 'Swedish meat ball seasoned with love ...',
              input_html: {rows:  2, class: "materialize-textarea"} %>
  <%= f.input :cook_time,
              label: "Cooking Time",
              error: 'Cooking Time is mandatory, please specify one' %>
  <%= f.input :prep_time,
              label: "Preparation Time",
              error: 'Preparation Time is mandatory, please specify one' %>
  <%= f.input :ingredient,
              as: :text,
              label: 'Ingredient',
              error: 'Ingredient are mandatory otherwise no food tonight!',
              input_html: {rows:  10, class: "materialize-textarea"} %>
  <%= f.input :instruction,
              as: :text,
              label: 'Instruction',
              error: 'Instruction is mandatory, please specify one',
              input_html: {rows:  10, class: "materialize-textarea"} %>
  <%= f.input :image_url,
              label: "Image Link",
              error: 'Image link is mandatory, please specify one' %>

  <%= f.submit "Save Recipe", "data-disable-with"=> "Just a moment...", class: "btn waves-effect waves-light" %>

<% end %>